# ==============================================
# CONFIGURACIÓN BASE DE DATOS
# ==============================================
# Cambia esta línea por tu cadena real de PostgreSQL
DATABASE_URL=postgresql://USUARIO:CONTRASENA@HOST:PUERTO/NOMBRE_BASE

# ==============================================
# CONFIGURACIÓN JWT (Autenticación)
# ==============================================
JWT_SECRET=una-clave-secreta-larga-y-segura-que-tu-elijas

# ==============================================
# TMDB API (The Movie Database)
# ==============================================
TMDB_API_KEY=TU_API_KEY_REAL_DE_TMDB

# ==============================================
# CONFIGURACIÓN DEL SERVIDOR
# ==============================================
NODE_ENV=development
PORT=5000

# ==============================================
# CONFIGURACIÓN CORS
# ==============================================
# AQUÍ va la URL del FRONTEND (Vite)
FRONTEND_URL=http://localhost:5173
